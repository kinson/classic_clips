<div class="border-nd-yellow border-l-2 w-11/12 mx-auto md:w-full">
  <div class="ml-10 md:ml-20">
    <p class="text-center text-nd-pink w-max mb-6 mt-14 font-open-sans font-bold text-4xl">
      Secaucus
    </p>

    <.form
      let={f}
      for={:matchup}
      phx-submit="create-matchup"
      phx-change="matchup-change-form"
      class="mb-0"
    >
      <p class="text-white font-open-sans font-bold mb-4">
        Game Date
      </p>
      <div class="flex flex-row items-center h-28">
        <%= date_input(f, :matchup_date,
          value: get_matchup_date(@matchup_date),
          min: "2022-10-11",
          max: "2023-04-09",
          class: "my-0 text-3xl p-1 rounded"
        ) %>
        <p class={get_status_text_class(@current_matchup)}>
          <%= get_matchup_status(@current_matchup) %>
        </p>
      </div>
      <%= if length(@games) > 0 do %>
        <p class="text-white font-open-sans font-bold">
          Choose a Game from Today&apos;s Schedule
        </p>
        <div class="flex flex-col gap-6 mb-10">
          <%= for game <- @games do %>
            <div
              class={game_button_class(game.game_id, game_id_value(@selected_game_id, @current_matchup))}
              phx-click="select-game"
              phx-value-id={game.game_id}
              phx-value-away-team={game.away_team_code}
              phx-value-home-team={game.home_team_code}
              phx-value-tip-datetime={game.game_time_utc}
            >
              <p class="my-0 w-40">
                <%= game.away_team_code %> @ <%= game.home_team_code %>
              </p>
              <p class="my-0 text-center">
                <%= get_time_for_game(game.game_time_utc) %>
              </p>
              <p class="my-0">
                <%= game.game_id %>
              </p>
            </div>
          <% end %>
        </div>

        <%= hidden_input(f, :game_id, value: game_id_value(@selected_game_id, @current_matchup)) %>
        <%= hidden_input(f, :tip_datetime,
          value: tip_datetime_value(@selected_game_tip_datetime, @current_matchup)
        ) %>
        <%= hidden_input(f, :favorite_team_code,
          value: favorite_team_code_value(@selected_game_favorite_code, @current_matchup)
        ) %>
        <%= hidden_input(f, :away_team_code,
          value: away_team_code_value(@selected_game_away_code, @current_matchup)
        ) %>
        <%= hidden_input(f, :home_team_code,
          value: home_team_code_value(@selected_game_home_code, @current_matchup)
        ) %>

        <%= if away_team_code_value(@selected_game_away_code, @current_matchup) do %>
          <p class="text-white font-open-sans font-bold">
            Set Favorite Team and No Dunks Picks
          </p>
          <div class="flex flex-row my-4 gap-x-4">
            <p class="text-white w-24 my-0">
              Favorite
            </p>
            <div
              phx-click="select-favorite-team"
              phx-value-favorite-code={away_team_code_value(@selected_game_away_code, @current_matchup)}
              class={team_button_class(away_team_code_value(@selected_game_away_code, @current_matchup), favorite_team_code_value(@selected_game_favorite_code, @current_matchup))}
            >
              <p class="my-0 bg-nd-pink text-white">
                <%= away_team_code_value(@selected_game_away_code, @current_matchup) %>
              </p>
            </div>
            <div
              phx-click="select-favorite-team"
              phx-value-favorite-code={home_team_code_value(@selected_game_home_code, @current_matchup)}
              class={team_button_class(home_team_code_value(@selected_game_home_code, @current_matchup), favorite_team_code_value(@selected_game_favorite_code, @current_matchup))}
            >
              <p class="my-0 bg-nd-pink text-white">
                <%= home_team_code_value(@selected_game_home_code, @current_matchup) %>
              </p>
            </div>
            <%= text_input(f, :game_line,
              placeholder: "-7.5",
              class: "my-0 text-white !w-28",
              value: game_line_value(@selected_game_line, @current_matchup)
            ) %>
          </div>

          <%= for ndc_member <- [:leigh, :skeets, :tas, :trey] do %>
            <div class="flex flex-row my-4 gap-x-4">
              <p class="text-white w-24 my-0">
                <%= Atom.to_string(ndc_member) |> String.capitalize() %>
              </p>
              <div
                phx-click="select-ndc-member-pick"
                phx-value-member={ndc_member}
                phx-value-team-code={away_team_code_value(@selected_game_away_code, @current_matchup)}
                class={team_button_class(away_team_code_value(@selected_game_away_code, @current_matchup), ndc_pick_value(ndc_member, @ndc_picks, @current_ndc_picks))}
              >
                <p class="my-0 bg-nd-pink text-white">
                  <%= away_team_code_value(@selected_game_away_code, @current_matchup) %>
                </p>
              </div>
              <div
                class={team_button_class(home_team_code_value(@selected_game_home_code, @current_matchup), ndc_pick_value(ndc_member, @ndc_picks, @current_ndc_picks))}
                phx-click="select-ndc-member-pick"
                phx-value-member={ndc_member}
                phx-value-team-code={home_team_code_value(@selected_game_home_code, @current_matchup)}
              >
                <p class="my-0 bg-nd-pink text-white">
                  <%= home_team_code_value(@selected_game_home_code, @current_matchup) %>
                </p>
              </div>
            </div>
          <% end %>

          <div class="flex flex-row items-center gap-x-5 my-12">

            <p class="text-white my-0">
              Publish Date:
            </p>

            <%= datetime_local_input(f, :publish_at,
              value: get_publish_at_date(@current_matchup),
              min: PickEm.get_current_est_date(),
              max: "2023-04-09",
              class: "my-0 text-3xl rounded"
            ) %>

            <p class="text-white my-0">
              EST
            </p>

          </div>

          <%= submit("#{if @current_matchup, do: "Update", else: "Create"} Matchup",
            class: "rounded-none bg-nd-pink shadow-lg mt-6 w-full hover:bg-nd-yellow hover:text-nd-pink"
          ) %>
        <% end %>
      <% end %>
    </.form>

    <%= if @current_matchup do %>
      <button
        data-confirm="Are you sure you want to resend email?"
        phx-click="resend-matchup-email"
        class="rounded-none bg-nd-pink shadow-lg mt-6 w-full hover:bg-nd-yellow hover:text-nd-pink"
      >
        Resend Email Notification
      </button>
      <button
        data-confirm="Are you sure you want to repost tweet?"
        phx-click="repost-matchup-tweet"
        class="rounded-none bg-nd-pink shadow-lg mt-6 w-full hover:bg-nd-yellow hover:text-nd-pink"
      >
        Repost Tweet Notification
      </button>
    <% end %>
  </div>
</div>
