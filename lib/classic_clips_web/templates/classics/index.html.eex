<div class="classics-container">
  <%= for {video, index} <- big_list(@classics) do %>
    <%= link to: yt_url(video), target: "_blank" do %>
      <div class="<%= classic_class(index) %>">
      <img src="<%= image_url(video) %>" />
      <p class="title"><%= title(video) %></p>
      <p class="description"><%= video.description %></p>
    <% end %>
    <div class="tags">
      <div class="date">
        <p><%= publish_date(video) %></p>
      </div>
      <div class="type">
        <p><%= type(video) %></p>
      </div>
    </div>
  </div>
<% end %>
<%= for {video, index} <- little_list(@classics) do %>
  <div class="<%= classic_class(index) %>">
  <%= link to: yt_url(video), target: "_blank" do %>
    <div class="title-row">
      <img src="<%= image_url(video) %>" />
  <p class="title">
    <%= title(video) %>
  </p>
</div>
<% end %>
<div class="tags">
  <div class="date">
    <p><%= publish_date(video) %></p>
  </div>
  <div class="type">
    <p><%= type(video) %></p>
  </div>
</div>
</div>
<% end %>
</div>
